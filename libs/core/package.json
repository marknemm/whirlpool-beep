{
  "name": "@npc/core",
  "version": "0.0.1",
  "description": "NPC Core library",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --build",
    "build:root": "npm run build --include-workspace-root",
    "build:watch": "tsc --build --watch",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "clean:all": "npm run clean && npm run clean:deps && npm run clean:logs",
    "clean:deps": "rimraf node_modules",
    "clean:logs": "rimraf logs",
    "clean:root": "npm run clean --include-workspace-root",
    "dev:env": "dotenv -e .env.development.local -e .env.development -e .env --",
    "install:root": "npm install --include-workspace-root",
    "lint": "eslint .",
    "prod:env": "dotenv -e .env.production.local -e .env.production -e .env --",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "axios": "^1.7.3",
    "bs58": "^5.0.0",
    "colors": "^1.4.0",
    "decimal.js": "^10.4.3",
    "deepmerge": "^4.3.1",
    "envalid": "^8.0.0",
    "glob": "^11.0.0",
    "prompts": "^2.4.2",
    "winston": "^3.13.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/pg": "^8.11.6",
    "@types/prompts": "^2.4.9",
    "kysely-codegen": "^0.15.0",
    "kysely-ctl": "^0.9.0"
  },
  "author": "Mark Nemmer",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0",
    "yarn": "Use npm!"
  }
}
