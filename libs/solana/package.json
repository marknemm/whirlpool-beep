{
  "name": "@npc/solana",
  "version": "0.0.1",
  "description": "NPC Solana library & CLI",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --build",
    "build:root": "npm run build --include-workspace-root",
    "build:watch": "tsc --build --watch",
    "clean": "rimraf dist tsconfig.tsbuildinfo wallet.json",
    "clean:all": "npm run clean && npm run clean:deps && npm run clean:logs",
    "clean:deps": "rimraf node_modules",
    "clean:logs": "rimraf logs",
    "clean:root": "npm run clean --include-workspace-root",
    "dev": "npm run dev:env -- npm run start:ts --",
    "dev:db": "npm run dev:db --prefix ../core",
    "dev:env": "npm run dev:db && dotenv -e .env.development.local -e ../core/.env.development.local -e .env.development -e ../core/.env.development -e .env.local -e ../core/.env.local -e .env -e ../core/.env --",
    "install:root": "npm install --include-workspace-root",
    "lint": "eslint .",
    "prod": "npm run prod:env -- npm run start:ts --",
    "prod:env": "dotenv -e .env.production.local -e ../core/.env.production.local -e .env.production -e ../core/.env.production -e .env.local -e ../core/.env.local -e .env -e ../core/.env --",
    "start:ts": "node -r ts-node/register -r tsconfig-paths/register --inspect src/cli.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@metaplex-foundation/mpl-token-metadata": "^3.2.1",
    "@metaplex-foundation/umi": "^0.9.2",
    "@metaplex-foundation/umi-bundle-defaults": "^0.9.2",
    "@npc/core": "0.0.1",
    "@solana-developers/helpers": "~2.3.0",
    "@solana/spl-token": "^0.4.8",
    "@solana/web3.js": "^1.95.3",
    "axios": "^1.7.3",
    "bn.js": "^5.2.1",
    "bs58": "^5.0.0",
    "colors": "^1.4.0",
    "decimal.js": "^10.4.3",
    "deepmerge": "^4.3.1",
    "envalid": "^8.0.0",
    "glob": "^11.0.0",
    "kysely": "^0.27.4",
    "yargs": "^17.7.2"
  },
  "devDependencies": {},
  "author": "Mark Nemmer",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0",
    "yarn": "Use npm!"
  }
}
